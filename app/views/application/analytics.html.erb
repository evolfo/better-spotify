<div class="row">
  <div class="col-lg-6">
    <h1>Most Viewed Artists</h1>
    <ol>
      <% @sorted_songs.each do |song| %>
        <li>
          <div class="top-song-wrapper">
            <%= image_tag(song.artist.img_url) %>
            <ul>
              <li><%=link_to song.artist.name, song.artist %></li>
              <li>Views: <%= song.play_count %></li>
           </ul>
          </div>
        </li>
      <% end %>
    </ol>
  </div>

  <div class="col-lg-6">
    <h1>Artists With The Most Songs</h1>
    <ol>

      <% @sorted_artists.each do |artist| %>
        <li>
          <div class="top-song-wrapper2">
            <%= image_tag(artist.img_url) %>
            <ul>
              <li>Artist: <%= link_to artist.name, artist %></li>
              <li># of Songs: <%= artist.num_of_songs %></li>
            </ul>
          </div>
        </li>
      <% end %>

    </ol>
  </div>
</div>